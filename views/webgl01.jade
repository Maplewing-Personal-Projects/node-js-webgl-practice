extend layout
block content
	script(id="shader-fs", type="x-shader/x-fragment")
		| precision mediump float;

		| varying vec4 vColor;

		| void main(void) {
		|	gl_FragColor = vColor;
		| }
	script(id="shader-vs", type="x-shader/x-vertex")
		| attribute vec3 aVertexPosition;
		| attribute vec4 aVertexColor;

		| uniform mat4 uMVMatrix;
		| uniform mat4 uPMatrix;

		| varying vec4 vColor;

		| void main(void) {
		| 	gl_Position = uPMatrix * uMVMatrix * vec4(aVertexPosition, 1.0);
		|	vColor = aVertexColor;
		| }
	script(type="text/javascript", src="/script/webgl-utils.js")
	script(type="text/javascript", src="/script/glMatrix-0.9.5.min.js")
	script(type="text/javascript", src="/script/jquery-1.10.2.min.js")
	script(type="text/javascript", src="/script/WebGL01Setting.js")

	canvas(id="HW1Canvas", style="border: none;", width="500", height="500")
	p Use Mouse Buttons(Left, Middle, Right) to change the axis of rotation.