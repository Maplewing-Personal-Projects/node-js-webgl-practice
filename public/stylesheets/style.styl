/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #5b4dfa //fa5b4d
nav-color = #fd6d5d
hover-color = #0b0daa //aa0b0d
background-color = #faf9f0

body
  font-family 'Segoe UI Light', '微軟正黑體' , 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Segoe UI Light', '微軟正黑體', 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

  a 
    color #fff
    text-decoration none

  a:hover
    color hover-color

.container
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  width 500px

  h1
    font-size large
    margin-top 10px
    margin-bottom 10px
    font-weight bold

  a
    color main-color
    text-decoration none

  a:hover
    color hover-color


  p
    margin-bottom 20px

  table
    margin auto
    width 200px

    tr
      th,td
        padding 10px 
        text-align center

      th
        background #777
        color white

      td
        border-bottom 1px solid black

    tr:nth-child(odd) td
        background #ccc

  li
    margin-top 10px

.sidebar
  float left
  width 200px

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px